rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==================== USERS COLLECTION ====================
    // Each user has a document with their UID as the document ID
    match /users/{userId} {
      // Allow users to read their own data
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to create their own document during sign-up
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to update their own data
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to delete their own data (if implementing account deletion)
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // ==================== FUTURE COLLECTIONS ====================
    // Add rules here for future features like:
    // - Prayer statistics
    // - Bookmarked locations
    // - Quran reading progress
    // - User preferences
    
    // Example: User preferences subcollection
    // match /users/{userId}/preferences/{document=**} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
